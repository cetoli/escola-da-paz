<div id="content">
	<div>
		<div class="content">
			<h1 class="title style1">Editar Artigo</h1>
			<br/>
			<% form_tag({:action => 'updateUsr', :id => @paper, :area => @area}, :multipart => true) do %>
				<%= render :partial => 'formUsr' %>
				<%= submit_tag 'Alterar' %>
			<% end %>
			<br/>
			<%= link_to image_tag("opn.png", :border => 0, :alt => 'Mostrar'), { :action => 'mostrar', :id => @paper, :area => @area }, :method => "post" %> | <%= link_to image_tag("goBack.gif", :border => 0, :alt => 'Voltar'), { :action => 'getArtsArea', :id => @paper.area, :area => @area }, :method => "post" %>
	  	</div>
	</div>
</div>
